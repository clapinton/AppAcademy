<style>

  body {
    font-family: 'Open Sans', sans-serif;
    background-color: #2c3e50;
    color: #ecf0f1;
  }

  a {
    color: #3498db;
  }

  header {
    background-color: #34495e;
    color: #ecf0f1;
    height: 50px;
    padding: 10px;
  }

  header h1 {
    margin: 0;
    font-weight: 300;
    float: left;
    width: 60%;
  }

  main {
    margin: 10px;
  }

  input {
    background: none;
    border: none;
    border-bottom: 2px solid #bdc3c7;
    color: #bdc3c7;
    font-size: 14px;
    width: 470px;
  }

  input:focus {
    outline: none;
  }

  .main-list p a {
    text-align: center;
    padding: 20px;
    background-color: rgba(0,0,0,0.2);
    margin: 20px 10px;
    display: block;
    text-decoration: none;
    border-radius: 15px;
  }

  .main-list p a:hover {
    background-color: rgba(0,0,0,0.4);
  }

</style>

<header>

<h1>Welcome to the <%= link_to "MusicApp", bands_url %>!</h1>

<% if current_user %>
<p style="text-align: left; float: left"> <%= current_user.email %> | <%= link_to "Logout", session_url, method: "delete" %>
<% end %>
</header>
